@model GestionUI.Models.EncuestaModel
@{
    ViewBag.Title = "Entidad";
    Layout = null;
}

    <form id="formulario">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Entidad, new { Value = Model.Entidad })
        <div class="form-row">
            <div class="form-group form-inline col-12">
                <div>
                    @Html.LabelFor(model => model.Oficina, "Nombre de la oficina productora:", htmlAttributes: new { @class = "col-form-label" })
                </div>
                <div class="pl-3">
                    @Html.EditorFor(model => model.Oficina, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Oficina, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="form-group form-inline col-12">
                <div>
                    @Html.LabelFor(model => model.CodigOficina, "Código de la oficina productora:", htmlAttributes: new { @class = "col-form-label" })
                </div>
                <div class="pl-3">
                    @Html.EditorFor(model => model.CodigOficina, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CodigOficina, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="form-group form-inline col-12">
                <div>
                    @Html.LabelFor(model => model.Encargado, "Nombre del encargado:", htmlAttributes: new { @class = "col-form-label" })
                </div>
                <div class="pl-3">
                    @Html.EditorFor(model => model.Encargado, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Encargado, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="form-group form-inline col-12">
                <div>
                    @Html.LabelFor(model => model.cargo, "Cargo del encargado:", htmlAttributes: new { @class = "col-form-label" })
                </div>
                <div class="pl-3">
                    @Html.EditorFor(model => model.cargo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cargo, "", new { @class = "text-danger" })
                </div>

            </div>
        </div>



        <input type="submit" id="btnSubmit" value="AGREGAR OFICINA PRODUCTORA" class="btn btn-success col-md-12 h" onclick="" />
    </form>

<script>
     $(document).ready(function () {
            $("#btnSubmit").click(function () {
                var formdata = $("#formulario").serialize();
                $.ajax({
                    type: "POST",
                    url: "/Encuesta/AgregarOficina/",
                    data: formdata,
                    success: function(data) {
                        if (data != null && data.success) {
                            location.reload();
                       
                        } else {
                              location.reload();
                        }                       
                    },
                    error: function () {
                         
                    }
                })
            })

        })
</script>
