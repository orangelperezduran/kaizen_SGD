@model GestionUI.Models.EncuestaModel
@{
    ViewBag.Title = "Entidad";
    Layout = null;
}

<form id="formulario">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-row">
        <div class="form-group form-inline col-12" >
            <div >
                @Html.LabelFor(model => model.Entidad, "Nombre de la entidad:", htmlAttributes: new { @class = "col-form-label" })
            </div>
                <div class="pl-3">
                        @Html.EditorFor(model => model.Entidad, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Entidad, "", new { @class = "text-danger" })
                </div>
           
        </div>       
    </div>



    <input type="submit" id="btnSubmit" value="AGREGAR ENTIDAD" class="btn btn-success col-md-12 h" onclick="" />
</form>

<script>
     $(document).ready(function () {
            $("#btnSubmit").click(function () {
                var formdata = $("#formulario").serialize();
                $.ajax({
                    type: "POST",
                    url: "/Encuesta/AgregarEntidad/",
                    data: formdata ,
                    success: function(data) {
                        if (data != null && data.success) {
                            Location.reload();
                       
                        } else {
                            window.location.reload();
                        }                       
                    },
                    error: function () {

                        Location.reload();
                         
                    }
                      
                })
            })

        })
</script>